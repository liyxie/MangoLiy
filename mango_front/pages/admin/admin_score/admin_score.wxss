/* pages/admin_score/admin_score.wxss */
.main {
  margin-top: 10rpx;
}
.back {
  background-color: rgba(255, 255, 255, 0);
  margin: 10px;
}
.goTop {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
}
.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 600rpx;
  width: 50%;
  margin-left: 25%;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
}

.submit {
  display: block;
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}